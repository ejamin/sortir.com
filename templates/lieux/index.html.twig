{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | Lieux {% endblock %}

{% block body %}
    <div>
        {% for label,  messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{ label }}">
                    {% if label == "success" %}
                        <strong class="font__weight-semibold">Félicitation !</strong> Votre demande à bien aboutie.
                    {% elseif label == "warning" %}
                        <strong class="font__weight-semibold">Attention !</strong> Une erreur est survenue.
                    {% elseif label == "error" %}
                        <strong class="font__weight-semibold">Erreur !</strong> Votre demande n'a pas pu aboutir.
                    {% endif %}
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    <div>
        <h3>Nouveau lieu</h3>
        {{ form_start(lieuForm) }}
        {{ form_widget(lieuForm) }}
        <button type="button" class="btn btn-lg btn-outline-light mb-1 mt-3 ">
            <a class="text-decoration-none" href="{{ path('app_lieux') }}">Annuler</a>
        </button>
        {{ form_end(lieuForm) }}
    </div>
    <div>
        <h3>Listing des lieux</h3>
        {% for lieu in lieux %}
            <div>
                <h4>{{ lieu.nom }}</h4>
                <p>Au {{ lieu.rue }}</p>
                <p>A {{ lieu.idVille.codePostal }} {{ lieu.idVille.nom }}</p>
                <p>Latitude : {{ lieu.latitude }} | Longitude : {{ lieu.longitude }}</p>
            </div>
        {% endfor %}
    </div>
{% endblock %}
